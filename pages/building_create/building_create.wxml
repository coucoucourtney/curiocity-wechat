<!--pages/building_create/building_create.wxml-->
<view class='create-form'>
  <view class="h1">Add a building</view>

  <form class="new-form" bindsubmit="createBuilding">
  <view class="element-section">Building information</view>
    <view class="element-name">Name</view>
      <input name="name" placeholder="building name..."></input>
    <view class="element-name">Year</view>
      <input name="year" placeholder="year built..."></input>
    <view class="element-name">Architect(s)</view>
      <input name="architects" placeholder="architect(s)..."></input>
    <view class="element-name">Style</view>
      <input name="style" placeholder="ex. modern, art deco, victorian..."></input>
      <view class="element-name">Building Description</view>
        <input name="description" placeholder="ex. special elements, who lived here, stories about the building..."></input>
  <view class="element-section">Location information</view>
    <view class="element-name">Metro Stop</view>
      <input name="Metro Stop" placeholder="nearest metro stop"></input>
    <view class="element-name">Address</view>
      <input name="Address" placeholder="address of building"></input>
    <!-- try making a map pop up and enter address/name of building -->
   
   <view class="element-name">Main image of building</view>
      <image src='{{tempFilePath}}'></image>
      <view class="btn-size2">
      <button class='button-light' bindtap="takePhoto">Upload a picture</button>
    </view>
  <view class="btn-size">
    <button class='btn-black' form-type="submit" data-id="{{user.id}}">SUBMIT</button>
  </view>
  </form>
</view>
