/* CARD AREA  */

.card-product {
  overflow: hidden;
  height: 120px;
  background: white;
  box-shadow: 0rpx 2rpx 6rpx rgba(0,0,0,0.20);
  border: 3.5rpx solid white;
  display: flex;
  align-items: center;
  border-radius: 5px;
  margin-left: 5px;
  margin-right: 5px;
  margin-top: 5px;
  margin-bottom: 35rpx;
  position: relative;
}

.card-product .main-image {
  height: 100%;
  width: 300rpx;
  object-fit: cover;
  border-radius: 5px;
}

.card-product .card-product-infos {
  padding: 20rpx 20rpx 20rpx 40rpx;
  vertical-align:middle;
}

.card-product .h2 {
  font-size: 15px;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.list {
  margin-left: 20rpx;
}

.card-product .p {
  font-size: 24rpx;
  line-height: 1.4;
  opacity: .7;
  font-weight: 400;
  margin-left: 17rpx;
}

.space-p {
  margin-top: 8rpx;
}

.space-t {
  margin-top: 6rpx;
}


.block-pair{
  display: flex;
  justify-content: flex-start;
  margin-bottom: 7rpx;
}

.marker-time{
  height: 30rpx;
  width: 30rpx;
  margin-right: 20rpx;
  margin-top: 8rpx;
}

.marker-distance{
  height: 45rpx;
