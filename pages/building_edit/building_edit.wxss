/* pages/building_edit/building_edit.wxss */
.create-form {
  margin: 20rpx 40rpx;
}

.building_image_present {
  height: 200rpx;
  width: 200rpx;
  border: 4rpx dashed rgb(150, 150, 150, .5);
  flex-shrink: 0;
}

.h1 {
  display: flex;
  /* align-items: center; */
  justify-content: center;
  font-size: 55rpx;
  font-weight: bold;
}

.element-section {
  padding-bottom: 30rpx;
  padding-top: 40rpx;
  margin-left: 10rpx;
  text-align: center;
  color: #C8039D;
}

.element-name {
  font-size: 25rpx;
  margin-left: 25rpx;
}

.new-form {
  /* text-align: center; */
  margin-top: 100rpx;
  margin-left: 100rpx;
}

.wide{
  height: 400rpx;
  margin-bottom: 20rpx;
  margin: 25rpx auto;
  padding: 15rpx;
  border: 2rpx solid black;
  border-radius: 2rpx;
  width: 600rpx;
  text-align: left;
  font-size: 12px;
  margin-bottom: 35rpx;
  /* word-wrap: overflow-wrap; */
  font-style: italic;
}

input {
  margin: 25rpx auto;
  padding: 15rpx;
  border: 2rpx solid black;
  border-radius: 2rpx;
  width: 600rpx;
  text-align: left;
  font-size: 24rpx;
  margin-bottom: 35rpx;
  word-wrap: break-word;
  font-style: italic;
}

.btn {
  padding-top: 18rpx;
  font-weight: bold;
  transition: opacity 0.3s ease;
  font-size: 28rpx;
  margin-top: 15rpx;
  width: 640rpx;
  height: 50rpx;
  border-radius: 50rpx;
  /* text-align: center; */
}

.btn-black {
  color: white;
  background-color: black;
  border: 1px solid black;
}

.btn-light {
  border: 1px solid rgb(163, 163, 163);
  color: rgb(150, 150, 150);
  background-color: white;
}

.uploader {
  display: flex;
}

.img-upload {
  height: 175rpx;
  width: 175rpx;
  margin: 25rpx;
}

.cam-icon{
  border: 4rpx dashed rgb(150, 150, 150, .5);
  padding: 106rpx 11rpx 11rpx 103rpx;
  height: 60rpx;
  width: 60rpx;
  opacity: .5;
  margin: 25rpx;
  flex-shrink: 0;
  /* position: absolute;
  left: 165rpx;
  top: 565rpx; */
}

.align-pic {
  display: flex;
  flex-direction: row;
  margin-bottom: 20rpx;
  overflow: scroll;
}

.img-upload-slider {
margin: 25rpx;
}

.remove{
  width: 30rpx;
  height: 30rpx;
  box-shadow: 2rpx 2rpx 3rpx rgba(0, 0, 0, .1);
  position: absolute;
  top: 14rpx;
  right: 13rpx;
}

.added-pic{
  position: relative;
}

.login-caption {
  font-style: italic;
  text-align: center;
  font-size: 12px;
  margin-top: 20rpx;
  margin-bottom: 25rpx;
  opacity: .8;
  color: #C8039D;
}

/* delete */
.edit-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 41rpx;
  padding-right: 27rpx;
  padding-left: 27rpx;
  padding-bottom: 35rpx;
  margin-top: 20vh;
  border-top: 1rpx solid rgba(0, 0, 0, .2);
}

.icon {
  height: 48rpx;
  width: 48rpx;
}

.trash  {
  opacity: .4;
}

.text-edit {
  font-size: 27rpx;
}