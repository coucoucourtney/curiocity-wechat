<!--longitude及latitude为设置为调转到指定地址位置，默认不显示-->
<map
id="myMap"
style="width: 100%; height: 100vh;"
longitude="{{longitude}}" latitude="{{latitude}}"
scale='14'
subkey="{{mapKey}}"
polyline="{{polyline}}"
markers="{{markers}}"
bindmarkertap="bindMarkertap"
></map>
<van-action-sheet show="{{ show }}" title="{{name}}" bind:close="onClose" >
  <view class="p">{{description}}</view>
  <view class="btn-box">
  <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="goToBuilding" data-id="{{building.id}}"> More info </button>
  <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
        disabled="{{disabled}}" bindtap="goToDirection" data-coordinates="{{coordinates}}"> Direction </button>
  </view>
</van-action-sheet>