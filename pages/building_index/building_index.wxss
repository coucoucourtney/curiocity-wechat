.banner {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  height: 100vh;
  width: 100%;
  align-items: center;
  justify-content: center;
  /* position: sticky; */
  top: 0;
  display: flex;
  flex-direction: column;
  /* margin-bottom: 45rpx; */
  padding-bottom: 10rpx;
  box-shadow: 3rpx 3rpx 3rpx .25;
  /* check shadow syntax */
  margin-bottom: 20rpx;
}

.img-logo{
  box-shadow: 3rpx 3rpx 3rpx .25;
