  font-weight: bold;
  text-shadow: 3rpx 3rpx 3rpx .5;
  opacity: 1;
  transition: opacity 0.3s ease;
  width: 450rpx;
  text-align: center; 
  margin: 15rpx 0 0rpx 0;
  font-size: 25rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background: rgba(0, 0, 0, .6); */
