<!-- put search bar here -->
<view class="page">
    <view >
        <view class="weui-search-bar">
            <view class="weui-search-bar__form">
                <view class="weui-search-bar__box">
                    <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
                    <input type="text" class="weui-search-bar__input" placeholder="district, building name, metro, style..." bindinput="inputTyping" />
                    
                </view>
                <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
                    <icon class="weui-icon-search" type="search" size="14"></icon>
                    <view class="weui-search-bar__text">Search buildings...</view>
                </label>
            </view>
            <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">Cancel</view>
        </view>
        
    </view>
</view>
<!-- SEARCH BAR COPY END -->

<!-- cards section -->
<view class="cards">
  <view wx:for="{{buildings}}" wx:for-item="building" >
    <view class="card-product" bindtap="tapCard" data-id="{{building.id}}">
      <image class="card-img" mode="aspectFill" src='{{building.main_picture}}'/>
      <!-- check attr name for bdg pic -->
      <view class="card-product-infos">
        <view class="info-section">
          <view class="h2">{{building.name}}</view>
          <!-- <view class="p">{{building.district}}</view> -->
        </view>
          <image class="favorite" mode="aspectFit" bindTap="" src='/icons/star_empty.png'/>
      </view>
    </view> 
    </view>
  </view>
